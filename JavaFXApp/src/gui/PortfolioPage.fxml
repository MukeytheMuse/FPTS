                        <MenuItem fx:id="remove" mnemonicParsing="false" onAction="#handleRemoveMenuItemPressed"
                                  text="Remove Account"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem fx:id="about" mnemonicParsing="false" onAction="#handleAboutMenuItemPressed"
                                  text="About"/>
                    </items>
                </Menu>
            </menus>
