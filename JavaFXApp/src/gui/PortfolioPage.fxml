                                        <TableColumn fx:id="tickerCol" editable="false" prefWidth="100.0"
                                                     text="Ticker"/>
                                        <TableColumn fx:id="nameCol" editable="false" prefWidth="275.0"
                                                     text="Company Name"/>
                                        <TableColumn fx:id="sharesCol" editable="false" prefWidth="100.0"
                                                     text="Shares"/>
                                        <TableColumn fx:id="priceCol" editable="false" prefWidth="175.0"
                                                     text="Price per Share ($)"/>
                                        <TableColumn fx:id="valueCol" editable="false" prefWidth="150.0"
                                                     text="Current Value ($)"/>
                                    </columns>
